<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SafetyHelper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SafetyHelper" parent="Base.Theme.SafetyHelper" />

    <style name="Theme.MySplashScreen.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.SafetyHelper</item>
        <item name="backgroundTint">@color/background_color</item>
    </style>
    <style name="DefaultButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/ripple_content_round</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="DefaultEditText">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/content_text_color</item>
        <item name="android:background">@drawable/content_round</item>
    </style>
    <style name="DescText">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">"#A3A3A3"</item>
    </style>
</resources>